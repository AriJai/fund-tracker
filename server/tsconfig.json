{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "express"],
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "src/types"]
  },
  "include": ["**/*.ts", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
